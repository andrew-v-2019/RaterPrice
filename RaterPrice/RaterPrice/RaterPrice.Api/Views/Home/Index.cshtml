@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RaterPrice</title>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
  
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/goods")
</head>
<body ng-app="rpApp"  ng-cloak>
    <nav class="navbar navbar-default navbar-static-top" role="navigation" ng-controller="headerController">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand " ui-sref="main">Акции и лучшие цены</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a ui-sref="catalog">Каталог</a>
                    </li>
                    @*<li>
                        <a ui-sref="/aboutproject">О проекте</a>
                    </li>*@
                    <li>
                        <a ui-sref="contacts">Контакты</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li ng-hide="user.isAuthenticated"><a ui-sref="register">Регистрация</a></li>
                    <li ng-hide="user.isAuthenticated"><a ui-sref="login">Войти</a></li>
                    <li ng-show="user.isAuthenticated"><a ui-sref="logout">Выйти</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container-fluid">
        <div ui-view></div>
    </div>
</body>
</html>